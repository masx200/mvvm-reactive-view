{
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "outDir": "./src/",
    "rootDir": "./",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*"]
}
