{
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "outDir": "./src/",
    "rootDir": "./",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"] // 此处映射是相对于"baseUrl"
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*.ts"]
}
