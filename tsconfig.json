{
  "compilerOptions": {
    "paths": {
      "htm": ["./@types/htm"]
    },
    // "declarationMap": true,
    /*  "typeRoots": ["./@types/htm/index"],
    "types": ["./@types/htm/index"], */
    // "types": ["./types/htm.d.ts"],
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true
  },
  "include": ["*.ts", "./src/*.ts"],
  "exclude": []
}
